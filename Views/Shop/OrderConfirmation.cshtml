@{
    ViewData["Title"] = "Order Confirmation";
    var userId = Context.Session.GetString("UserId") ?? "";
    var isAdmin = Context.Session.GetString("IsAdmin") == "1";
    var isAffiliate = Context.Session.GetString("IsAffiliate") == "1";
    var isCustomer = Context.Session.GetString("IsCustomer") == "1";

    var userDataObj = new
    {
        userId = userId,
        isAdmin = isAdmin,
        isAffiliate = isAffiliate,
        isCustomer = isCustomer
    };

    var userDataJson = Newtonsoft.Json.JsonConvert.SerializeObject(userDataObj);
}

<script id="user-data" type="application/json">
    @Html.Raw(userDataJson)
</script>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">E-commerce /</span> Order Confirmation
    </h4>

    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="ti ti-check-circle text-success" style="font-size: 4rem;"></i>
                        <h2 class="mt-3">Thank You!</h2>
                        <p class="mb-1">Your order has been placed successfully.</p>
                        <p class="mb-3">Order ID: <span id="confirmedOrderId">@ViewBag.OrderId</span></p>
                        <p>Your order will be with the company.</p>
                    </div>

                    <div class="text-center">
                        <a href="@Url.Action("Index", "Shop")" class="btn btn-outline-primary me-2">
                            <i class="ti ti-shopping-cart me-1"></i> Continue Shopping
                        </a>
                        <a href="#" id="viewOrdersButton" class="btn btn-primary">
                            <i class="ti ti-list-check me-1"></i> View My Orders
                        </a>
                    </div>
                </div>
            </div>

            <!-- Order History Section (initially hidden) -->
            <div id="orderHistorySection" class="card" style="display: none;">
                <div class="card-header">
                    <h5 class="card-title">Your Order History</h5>
                </div>
                <div class="card-body">
                    <div id="orderHistory">
                        <!-- Order history will be loaded here by JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/order-confirmation.js"></script>

