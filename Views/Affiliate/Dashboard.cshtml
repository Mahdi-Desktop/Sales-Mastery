@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Affiliate Dashboard";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
    <link rel="stylesheet" href="~/vendor/libs/datatables-bs5/datatables.bootstrap5.css" />
    <link rel="stylesheet" href="~/vendor/libs/datatables-responsive-bs5/responsive.bootstrap5.css" />
    <link rel="stylesheet" href="~/vendor/libs/flatpickr/flatpickr.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
    <script src="~/vendor/libs/datatables-bs5/datatables-bootstrap5.js"></script>
    <script src="~/vendor/libs/flatpickr/flatpickr.js"></script>
    <script src="~/vendor/libs/moment/moment.js"></script>
    <script src="~/vendor/libs/sweetalert2/sweetalert2.js"></script>
}

@section PageScripts {
    @* <script src="~/js/firebase-init.js"></script> *@
    <script src="~/js/app-affiliate-dashboard.js"></script>
}

<script>
    // Pass Firebase configuration from server to client
    const firebaseConfig = {
        apiKey: "@ViewBag.FirebaseApiKey",
        authDomain: "@ViewBag.FirebaseProjectId" + ".firebaseapp.com",
        projectId: "@ViewBag.FirebaseProjectId",
        storageBucket: "@ViewBag.FirebaseStorageBucket",
        messagingSenderId: "@ViewBag.FirebaseMessagingSenderId",
        appId: "@ViewBag.FirebaseAppId"
    };
</script>

<!-- Affiliate Dashboard -->
<div class="row">
    <!-- Date Range Picker -->
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Affiliate Performance</h5>
                <div class="d-flex align-items-center gap-3">
                    @if (HttpContextAccessor.HttpContext?.Session.GetString("IsAdmin") == "1")
                    {
                        <div id="affiliateSelector" class="d-none">
                            <!-- Will be populated by JavaScript -->
                        </div>
                    }
                    <div class="input-group input-group-merge">
                        <span class="input-group-text"><i class="ti ti-calendar"></i></span>
                        <input type="text" id="flatpickr-range" class="form-control" placeholder="YYYY-MM-DD to YYYY-MM-DD" />
                    </div>
                    <button id="refresh-dashboard" class="btn btn-primary">
                        <i class="ti ti-refresh me-1"></i> Refresh
                    </button>
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dashboardActions" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ti ti-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dashboardActions">
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" id="export-dashboard">
                                    <i class="ti ti-file-export me-1"></i> Export Data
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0);" id="print-dashboard">
                                    <i class="ti ti-printer me-1"></i> Print Dashboard
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="col-lg-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="card-info">
                        <h5 class="mb-0" id="total-customers">0</h5>
                        <small>Total Customers</small>
                    </div>
                    <div class="card-icon">
                        <span class="badge bg-label-primary rounded p-2">
                            <i class="ti ti-users ti-sm"></i>
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <div class="progress w-100" style="height: 8px;">
                        <div class="progress-bar bg-primary" id="customers-progress" style="width: 0%"></div>
                    </div>
                    <span class="text-muted ms-2" id="customers-growth">+0%</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="card-info">
                        <h5 class="mb-0" id="total-orders">0</h5>
                        <small>Total Orders</small>
                    </div>
                    <div class="card-icon">
                        <span class="badge bg-label-info rounded p-2">
                            <i class="ti ti-shopping-cart ti-sm"></i>
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <div class="progress w-100" style="height: 8px;">
                        <div class="progress-bar bg-info" id="orders-progress" style="width: 0%"></div>
                    </div>
                    <span class="text-muted ms-2" id="orders-growth">+0%</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="card-info">
                        <h5 class="mb-0" id="total-revenue">$0.00</h5>
                        <small>Total Revenue</small>
                    </div>
                    <div class="card-icon">
                        <span class="badge bg-label-success rounded p-2">
                            <i class="ti ti-currency-dollar ti-sm"></i>
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <div class="progress w-100" style="height: 8px;">
                        <div class="progress-bar bg-success" id="revenue-progress" style="width: 0%"></div>
                    </div>
                    <span class="text-muted ms-2" id="revenue-growth">+0%</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div class="card-info">
                        <h5 class="mb-0" id="total-commissions">$0.00</h5>
                        <small>Total Commissions</small>
                    </div>
                    <div class="card-icon">
                        <span class="badge bg-label-warning rounded p-2">
                            <i class="ti ti-cash ti-sm"></i>
                        </span>
                    </div>
                </div>
                <div class="d-flex align-items-center mt-4">
                    <div class="progress w-100" style="height: 8px;">
                        <div class="progress-bar bg-warning" id="commissions-progress" style="width: 0%"></div>
                    </div>
                    <span class="text-muted ms-2" id="commissions-growth">+0%</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="col-12 col-xl-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h5 class="card-title mb-0">Sales & Commissions</h5>
                    <small class="text-muted">Monthly sales and commission earnings</small>
                </div>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="salesChartDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        2023
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="salesChartDropdown">
                        <li><a class="dropdown-item" href="javascript:void(0);">2023</a></li>
                        <li><a class="dropdown-item" href="javascript:void(0);">2022</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div id="affiliateSalesChart"></div>
            </div>
        </div>
    </div>

    <div class="col-12 col-xl-4 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h5 class="card-title mb-0">Weekly Referrals</h5>
                    <small class="text-muted">Referrals and conversions by day</small>
                </div>
            </div>
            <div class="card-body">
                <div id="monthlyReferralsChart"></div>
            </div>
        </div>
    </div>

    <!-- Affiliate Link -->
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Your Affiliate Link</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-8 mb-3 mb-md-0">
                        <div class="input-group">
                            <input type="text" class="form-control" id="affiliateLink" value="https://yourdomain.com/ref/YOUR_CODE" readonly>
                            <button class="btn btn-primary" type="button" onclick="copyAffiliateLink()">
                                <i class="ti ti-copy me-1"></i>Copy
                            </button>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="d-grid">
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#shareAffiliateModal">
                                <i class="ti ti-share me-1"></i>Share Link
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <p class="mb-0"><i class="ti ti-info-circle text-primary me-1"></i> Share this link with potential customers. You'll earn commission on their purchases.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Share Affiliate Link Modal -->
<div class="modal fade" id="shareAffiliateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Share Your Affiliate Link</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-12">
                        <p>Share your affiliate link on social media or via email:</p>
                    </div>
                    <div class="col-12">
                        <div class="d-flex justify-content-center gap-2">
                           <button type="button" class="btn btn-icon btn-facebook">
    <i class="ti ti-brand-facebook"></i>
</button>
<button type="button" class="btn btn-icon btn-twitter">
    <i class="ti ti-brand-twitter"></i>
</button>
<button type="button" class="btn btn-icon btn-linkedin">
    <i class="ti ti-brand-linkedin"></i>
</button>
<button type="button" class="btn btn-icon btn-whatsapp">
    <i class="ti ti-brand-whatsapp"></i>
</button>
<button type="button" class="btn btn-icon btn-email">
    <i class="ti ti-mail"></i>
</button>
                        </div>
                    </div>
<div class="col-12">
    <label for="emailMessage" class="form-label">Email Message</label>
    <textarea id="emailMessage" class="form-control" rows="4">Hi there! I thought you might be interested in checking out this product. Use my affiliate link to get started: https://yourdomain.com/ref/YOUR_CODE</textarea>
</div>
                </div>
            </div>
<div class="modal-footer">
    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary" onclick="copyEmailMessage()">Copy Message</button>
</div>
        </div>
    </div>
</div>

<script>
    window.userContext = {
        userId: "@ViewBag.UserId",
        isAdmin: "@ViewBag.IsAdmin" === "1",
        isAffiliate: "@ViewBag.IsAffiliate" === "1",
        isCustomer: "@ViewBag.IsCustomer" === "1"
    };
    // Copy email message
    function copyEmailMessage() {
        var copyText = document.getElementById("emailMessage");
        copyText.select();
        document.execCommand("copy");

        // Show success message
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: 'Message copied!',
            showConfirmButton: false,
            timer: 1500,
            customClass: {
                confirmButton: 'btn btn-primary'
            },
            buttonsStyling: false
        });
    }
</script>
