@model AspnetCoreMvcFull.DTO.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Products /</span> Delete Product
    </h4>

    <div class="card">
        <div class="card-body">
            <div class="mb-4">
                <h5 class="card-title">Are you sure you want to delete this product?</h5>
                <p class="card-text text-danger">This action cannot be undone.</p>
            </div>

            <div class="mb-4">
                <dl class="row">
                    <dt class="col-sm-3">Product Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">SKU</dt>
                    <dd class="col-sm-9">@Model.SKU</dd>

                    <dt class="col-sm-3">Price</dt>
                    <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>

                    <dt class="col-sm-3">Stock</dt>
                    <dd class="col-sm-9">@(Model.Stock > 0 ? Model.Stock.ToString() : "Out of stock")</dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="d-flex gap-3">
                    <a asp-action="List" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
