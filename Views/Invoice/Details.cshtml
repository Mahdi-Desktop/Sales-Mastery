@model AspnetCoreMvcFull.DTO.Invoice
@{
    ViewData["Title"] = $"Invoice #{Model.InvoiceNumber}";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Invoices /</span> Invoice Details
    </h4>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Invoice #@Model.InvoiceNumber</h5>
                    <div class="btn-group">
                        <a href="@Url.Action("Edit", new { id = Model.InvoiceId })" class="btn btn-primary">
                            <i class="ti ti-pencil me-1"></i> Edit
                        </a>
                        <a href="javascript:void(0);" onclick="printInvoice()" class="btn btn-secondary">
                            <i class="ti ti-printer me-1"></i> Print
                        </a>
                        <a href="@Url.Action("Download", new { id = Model.InvoiceId })" class="btn btn-info">
                            <i class="ti ti-download me-1"></i> Download
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Invoice Date</h6>
                            <p>@Model.InvoiceDate.ToDateTime().ToString("MMMM dd, yyyy")</p>

                            <h6>Status</h6>
                            <p>
                                <span class="badge bg-@GetStatusBadgeColor(Model.Status)">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h6>Due Date</h6>
                            <p>@Model.DueDate.ToDateTime().ToString("MMMM dd, yyyy")</p>

                            <h6>Total Amount</h6>
                            <p class="h3">$@Model.TotalAmount.ToString("0.00")</p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Discount</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                @item.ProductName
                                                @if (!string.IsNullOrEmpty(item.ProductSKU))
                                                {
                                                    <small class="text-muted d-block">SKU: @item.ProductSKU</small>
                                                }
                                            </td>
                                            <td>@(item.Description ?? "N/A")</td>
                                            <td>@item.Quantity</td>
                                            <td>$@item.UnitPrice.ToString("0.00")</td>
                                            <td>$@item.Discount.ToString("0.00")</td>
                                            <td>$@item.Total.ToString("0.00")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No items found in this invoice.</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="5" class="text-end">Subtotal:</th>
                                    <td>$@(Model.Items?.Sum(i => i.Total - i.Tax) ?? 0).ToString("0.00")</td>
                                </tr>
                                <tr>
                                    <th colspan="5" class="text-end">Tax:</th>
                                    <td>$@(Model.Items?.Sum(i => i.Tax) ?? 0).ToString("0.00")</td>
                                </tr>
                                <tr>
                                    <th colspan="5" class="text-end">Total:</th>
                                    <td>$@Model.TotalAmount.ToString("0.00")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h6>Notes:</h6>
                                <p>@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeColor(string status)
    {
        return status?.ToLower() switch
        {
            "paid" => "success",
            "downloaded" => "info",
            "draft" => "warning",
            "sent" => "secondary",
            "past due" => "danger",
            _ => "primary"
        };
    }
}

@section Scripts {
    <script>
        function printInvoice() {
            window.print();
        }
    </script>
}
