@model Dictionary<string, object>
@{
    ViewData["Title"] = "Document Details";
}

<h1>Document Details</h1>

<div class="card">
    <div class="card-body">
        @if (Model != null)
        {
            <h5 class="card-title">Document ID: @ViewContext.RouteData.Values["id"]</h5>
            <dl>
                @foreach (var item in Model)
                {
                    <dt>@item.Key</dt>
                    <dd>@item.Value</dd>
                }
            </dl>
        }
        else
        {
            <p>Document not found.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Test</a>
</div>
