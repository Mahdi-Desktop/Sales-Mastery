    </div>

    <div class="col-12 col-xl-4 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h5 class="card-title mb-0">Customer Growth</h5>
                    <small class="text-muted">Monthly customer acquisitions</small>
                </div>
            </div>
            <div class="card-body">
                <div id="customerGrowthChart"></div>
            </div>
        </div>
    </div>

    <div class="col-12 col-xl-4 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h5 class="card-title mb-0">Top Products</h5>
                    <small class="text-muted">Best selling products by revenue</small>
                </div>
            </div>
            <div class="card-body">
                <div id="topProductsChart"></div>
            </div>
        </div>
    </div>

    <!-- Top Affiliates -->
    <div class="col-12 col-xl-6 mb-4">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <h5 class="card-title mb-0">Top Affiliates</h5>
                    <small class="text-muted">Best performing affiliates by commission</small>
                </div>
                <a href="/Admin/Affiliates" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="topAffiliatesTable">
                        <thead>
                            <tr>
                                <th>Affiliate</th>
                                <th>Customers</th>
                                <th>Orders</th>
