                <div id="revenueChart"></div>
            </div>
        </div>
    </div>

    <!-- Commission Stats -->
    <div class="col-12 col-xl-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Commission Stats</h5>
            </div>
            <div class="card-body">
